{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:2023",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "graf-v2"
  },
  "tauri": {
    "bundle": {
      "updater": {
        "active": false,
        "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDI2RDU1OEIzRTZCRDg5QjMKUldTemliM21zMWpWSnJsekVBU0RXVElwSng2NVpsRXdsQlgwa2hnSDRNTmhwMXFGaWNPdURJc2QK",
        "windows": {
          "installMode": "basicUi"
        }
      },
      "category": "Education",
      "identifier": "com.graf-v2.dev",
      "publisher": "jigonzalez930209",
      "active": true,
      "copyright": "",
      "resources": [],
      "shortDescription": " ",
      "appimage": {
        "bundleMediaFramework": false
      },
      "targets": ["deb", "appimage", "nsis", "msi", "app", "dmg", "updater"],
      "externalBin": [],
      "deb": {
        "depends": []
      },
      "icon": ["icons/graph-icon128.ico", "icons/graph-icon128.ico"],
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },

      "windows": {
        "allowDowngrades": false,
        "wix": {
          "skipWebviewInstall": false,
          "enableElevatedUpdateTask": true
        },
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "webviewInstallMode": {
          "type": "embedBootstrapper",
          "silent": true
        },
        "timestampUrl": "",
        "nsis": {
          "installerIcon": "./icons/graph-icon128.ico",
          "installMode": "both"
        }
      }
    },
    "pattern": {
      "use": "brownfield"
    },

    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": ["$CACHE/**", "$CONFIG/**", "$APPCACHE/**"]
        }
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "title": "graf-v2",
        "resizable": true,
        "maximizable": true,
        "decorations": true,
        "transparent": false,
        "fileDropEnabled": true,
        "maximized": true,
        "contentProtected": false
      }
    ]
  },

  "plugins": {
    "http": {
      "all": true,
      "request": true,
      "scope": ["https://*", "http://*"]
    },
    "fs": {
      "scope": {
        "allow": ["**", "$CONFIG/*/**", "$APPCONFIG/**", "$APPCACHE/**"]
      }
    },
    "shell": {
      "open": true
    },

    "updater": {
      "endpoints": [
        "https://github.com/jigonzalez930209/graf-v2/releases/latest/download/latest.json"
      ]
    }
  }
}
