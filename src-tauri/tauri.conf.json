{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:2023",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "graf-v2"
  },
  "tauri": {
    "bundle": {
      "category": "Education",
      "identifier": "com.graf-v2.dev",
      "publisher": "jigonzalez930209",
      "active": true,
      "copyright": "",
      "resources": [],
      "shortDescription": " ",
      "appimage": {
        "bundleMediaFramework": false
      },
      "targets": ["deb", "appimage", "nsis", "msi", "app", "dmg", "updater"],
      "externalBin": [],
      "deb": {
        "depends": []
      },
      "icon": [
        "icons/graph-icon16.ico",
        "icons/graph-icon32.ico",
        "icons/graph-icon64.ico",
        "icons/graph-icon128.ico",
        "icons/graph-icon128.ico"
      ],
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "windows": {
        "allowDowngrades": false,
        "wix": {
          "skipWebviewInstall": false,
          "enableElevatedUpdateTask": true
        },
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "webviewInstallMode": {
          "type": "embedBootstrapper",
          "silent": true
        },
        "timestampUrl": "",
        "nsis": {
          "installerIcon": "./icons/graph-icon128.ico"
        }
      }
    },
    "pattern": {
      "use": "brownfield"
    },

    "security": {
      "csp": "default-src blob: data: filesystem: ws: wss: http: https: tauri: 'unsafe-eval' 'unsafe-inline' 'self' img-src: 'self'; connect-src ipc: http://ipc.localhost",
      "dangerousRemoteDomainIpcAccess": [
        {
          "scheme": "http",
          "domain": "tauri.localhost",
          "windows": ["main"],
          "plugins": [
            "app",
            "os",
            "shell",
            "window",
            "event",
            "fs",
            "storage",
            "dialog",
            "http"
          ]
        }
      ]
    },
    "windows": [
      {
        "fullscreen": false,
        "title": "graf-v2",
        "resizable": false,
        "maximizable": false,
        "decorations": true,
        "transparent": false,
        "fileDropEnabled": true,
        "maximized": true,
        "contentProtected": true
      }
    ]
  }
}
